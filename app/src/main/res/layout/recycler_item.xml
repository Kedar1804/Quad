<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp" >

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/recDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Date"
            android:fontFamily="@font/interextrabold"
            android:textColor="#0E4350"
            android:layout_marginStart="20sp"
            />

        <TextView
            android:id="@+id/recTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Time"
            android:layout_toRightOf="@+id/recDate"
            android:fontFamily="@font/interextrabold"
            android:textColor="#0E4350"
            android:layout_marginStart="200dp"
            />


        <TextView
            android:id="@+id/recSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Source"
            android:fontFamily="@font/interbold"
            android:textColor="@color/teal_700"
            android:layout_below="@+id/recDate"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/recLineimage"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-25dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="250dp"
            android:background="@drawable/linewithdots" />


        <TextView
            android:id="@+id/recDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Destination"
            android:fontFamily="@font/interbold"
            android:textColor="@color/teal_700"
            android:layout_below="@+id/recSource"
            android:layout_marginStart="45dp"
            android:layout_marginTop="70dp" />

        <TextView
            android:id="@+id/recAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/recDestination"
            android:layout_alignBottom="@+id/recDestination"
            android:layout_marginStart="86dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/recDestination"
            android:fontFamily="@font/interextrabold"
            android:text="Amount"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="20sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>